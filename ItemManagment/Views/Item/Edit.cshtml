@model ItemManagement.DomainModels.Item
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Item</h2>

<form action="/item/edit?id=@Model.Id" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name"> Item Name </label>
            <input type="text" class="form-control" id="ItemName" name="Name" placeholder="Name" value="@Model.Name" />
        </div>
        <div class="form-group col-md-6">
            <label for="Description"> Tag </label>
            <input type="text" class="form-control" id="Description" name="Description" placeholder="Description" value="@Model.Tag" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Image"> Image will be here </label>
            <input type="text" class="form-control" id="ItemTag" name="Image" placeholder="Image" value="future_feature" />
        </div>
    </div>
   
    <button type="submit" class="btn btn-success"> Update </button>
    <a class="btn btn-danger" href="/home"> Cancel</a>
</form>