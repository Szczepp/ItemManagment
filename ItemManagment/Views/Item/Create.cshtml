
@{
    ViewBag.Title = "Create";
}


<h2>Create an Item </h2>

<form action="/item/create" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name"> Item Name </label>
            <input type="text" class="form-control" id="ItemName" name="Name" placeholder="Item Name" />
        </div>
        <div class="form-group col-md-6">
            <label for="ItemTag"> Tag </label>
            <input type="text" class="form-control" id="ItemTag" name="Tag" placeholder="Tag" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Image"> Image will be here </label>
            <input type="text" class="form-control" id="ItemTag" name="Image" placeholder="Image" value="future_feature"/>
        </div>
    </div>

    <button type="submit" class="btn btn-success"> Create </button>
    <a class="btn btn-danger" href="/home"> Cancel</a>
</form>